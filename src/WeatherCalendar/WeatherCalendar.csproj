<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>Icon.ico</ApplicationIcon>
        <Copyright>Copyright © 2021-2023 Y.J.K. All rights reserved.</Copyright>
        <AssemblyVersion>0.4.3.1</AssemblyVersion>
        <FileVersion>0.4.3.1</FileVersion>
        <Version>0.4.3.1</Version>
        <Authors>Y.J.K</Authors>
        <Product>天气日历</Product>
        <PackageProjectUrl>https://github.com/YJammak/Weather</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Icon.ico" />
        <None Remove="Resources\Fonts\ChineseZodiac.ttf" />
        <None Remove="Resources\Fonts\Weather.ttf" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Anotar.NLog.Fody" Version="6.0.0">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="DynamicData" Version="7.14.2" />
        <PackageReference Include="Enums.NET" Version="4.0.1" />
        <PackageReference Include="Fody" Version="6.7.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="H.NotifyIcon.Wpf" Version="2.0.118" />
        <PackageReference Include="MaterialDesignThemes" Version="4.9.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="NLog" Version="5.1.4" />
        <PackageReference Include="NPinyin.Core" Version="3.0.0" />
        <PackageReference Include="ReactiveUI.Events.WPF" Version="15.1.1" />
        <PackageReference Include="ReactiveUI.Fody" Version="18.4.44" />
        <PackageReference Include="ReactiveUI.Validation" Version="3.1.7" />
        <PackageReference Include="ReactiveUI.WPF" Version="18.4.44" />
        <PackageReference Include="System.Management" Version="7.0.1" />
        <PackageReference Include="System.Reactive.Linq" Version="6.0.0" />
        <PackageReference Include="Ymiot.Core" Version="0.1.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SharpSxwnl\SharpSxwnl.csproj" />
        <ProjectReference Include="..\Weather\Weather.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Icon.ico">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </Resource>
        <Resource Include="Resources\Fonts\ChineseZodiac.ttf" />
        <Resource Include="Resources\Fonts\Weather.ttf" />
    </ItemGroup>

    <ItemGroup>
        <None Update="festivals.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
